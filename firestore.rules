rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra 1: Permite que um usuário leia e escreva seu próprio perfil
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Regra 2: Permite que um usuário leia e escreva em suas próprias subcoleções de logs
      match /{logCollection}/{logId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
  }
}
